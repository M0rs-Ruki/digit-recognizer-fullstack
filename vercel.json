{
    "version": 2,
    "builds": [
        {
            "src": "Backend/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "ai/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "Frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/ai/(.*)",
            "dest": "ai/app.py"
        },
        {
            "src": "/api/predict",
            "dest": "Backend/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "Frontend/index.html"
        }
    ]
}